page {
  background-color: #eee;
}
.problem_main {
  padding: 20rpx;
  color: #666;
}
.problem_main .problem_kind_content {
  display: flex;
  flex-wrap: wrap;
  font-size: 26rpx;
}
.problem_main .problem_kind_content .problem_kind_item {
  width: 30%;
  padding: 10px 0;
  text-align: center;
  background-color: #fff;
  margin: 20rpx 10rpx;
  border: 1rpx solid rgba(0, 0, 0, 0);
}
.problem_main .problem_kind_content .active {
  color: var(--themeColor);
  border: 1rpx solid currentColor;
}
.problem_main .problem_content {
  background-color: #fff;
  margin-top: 20rpx;
}
.problem_main .problem_content textarea {
  padding: 20rpx;
}
.problem_main .problem_content .select_img {
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 20rpx;
  justify-content: left;
}
.problem_main .problem_content .select_img button {
  margin: 0;
  margin-top: 20rpx;
  margin-left: 20rpx;
  width: 90rpx;
  height: 90rpx;
  font-size: 40rpx;
  color: #cacdca;
  display: flex;
  justify-content: center;
  align-items: center;
}
.problem_main .problem_content .select_img .img_up {
  margin-left: 20rpx;
  margin-top: 20rpx;
}
.problem_main .commit_btn {
  margin-top: 20rpx;
  display: flex;
  justify-content: flex-end;
}
.problem_main .commit_btn button {
  margin: 0;
  width: 30%;
  display: flex;
  justify-content: center;
  align-items: center;
}
